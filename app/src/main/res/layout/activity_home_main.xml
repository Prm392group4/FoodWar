<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    tools:context=".home_management.HomeActivity"
    android:paddingRight="16dp">

    <!-- Search bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:id="@+id/home_searchTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/main_border"
            android:hint="Search...."
            android:padding="12dp" />

        <Button
            android:id="@+id/home_btn_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_border"
            android:text="location"
            android:textSize="12dp">

        </Button>
    </LinearLayout>

    <!-- image slide show -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:ignore="MissingClass">
        <com.denzcoskun.imageslider.ImageSlider
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:iss_period="1000"
            app:iss_auto_cycle="true"
            app:iss_delay="1000"
            app:iss_title_background="@drawable/home_item_foods_border"
            android:id="@+id/home_imgslideshow">

        </com.denzcoskun.imageslider.ImageSlider>
    </androidx.cardview.widget.CardView>

    <!-- Food category buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

            <Button
                android:id="@+id/home_foodButton"
                android:background="@drawable/main_border"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="FOODS"/>


        <Button
            android:id="@+id/home_drinkButton"
            android:background="@drawable/main_border"
            android:layout_width="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="DRINKS"/>

        <Button
            android:id="@+id/home_fruitButton"
            android:background="@drawable/main_border"
            android:layout_width="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="FRUITS"/>


    </LinearLayout>

    <!-- Food list -->
    <GridView
        android:id="@+id/foodGridView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:verticalSpacing="8dp"
        android:horizontalSpacing="8dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:numColumns="2">

    </GridView>

    <!-- Bottom navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="1"
            android:src="@drawable/ic_home_but" />

        <ImageButton
            android:id="@+id/btn_add_blogs"
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/blog_image" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add_blogs_float"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_add"
            app:layout_anchor="@id/bottomAppBar"
            app:maxImageSize="40dp"
            app:tint ="@color/main"
            tools:ignore="MissingConstraints,NotSibling" />


        <ImageButton
            android:id="@+id/locationButton"
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_btn_location" />

        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="1"
            android:src="@drawable/ic_account_circle" />
    </LinearLayout>
</LinearLayout>